{
  "name": "my-students-track",
  "version": "2.0.0",
  "description": "A comprehensive student management system for schools and educational institutions with advanced features",
  "author": "Calch Media <support@calchmedia.com>",
  "private": true,
  "main": "electron.js",
  "homepage": "./",
  "keywords": [
    "school-management",
    "student-tracking",
    "fee-management",
    "education-software",
    "electron-app"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build-electron": "npm run build",
    "start": "next start",
    "lint": "next lint",
    "electron": "node_modules\\.bin\\electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron . --dev\"",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run electron-build -- --publish=never",
    "dist-win": "npm run electron-build -- --win --publish=never",
    "dist-mac": "npm run electron-build -- --mac --publish=never",
    "dist-linux": "npm run electron-build -- --linux --publish=never",
    "clean": "rimraf .next out dist build",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"No tests specified\" && exit 0",
    "test-electron": "node test-electron.js",
    "fix-and-run": "npm install && npm run build && npm run electron"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@types/jspdf": "^2.0.0",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "crypto-browserify": "^3.12.1",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "html2pdf.js": "^0.10.3",
    "https-browserify": "^1.0.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.294.0",
    "next": "^14.2.30",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-day-picker": "^9.8.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "twilio": "^5.8.0",
    "url": "^0.11.4",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@types/assert": "^1.5.11",
    "@types/electron": "^1.4.38",
    "@types/node": "^20.19.8",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "null-loader": "^4.0.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.calchmedia.mystudentstrack",
    "productName": "My Students Track",
    "copyright": "Copyright Â© 2025 Calch Media",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "electron.js",
      "preload.js",
      "lib/**/*",
      "firebase-service-account.json",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin"
    ],
    "win": {
      "icon": "public/logo.ico",
      "target": "nsis",
      "publisherName": "Calch Media"
    },
    "mac": {
      "icon": "public/logo.icns",
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "linux": {
      "icon": "public/logo.png",
      "category": "Education",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "My Students Track"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calchmedia/my-students-track.git"
  },
  "bugs": {
    "url": "https://github.com/calchmedia/my-students-track/issues"
  },
  "license": "MIT"
}
